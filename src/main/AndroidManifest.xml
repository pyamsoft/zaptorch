<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.zaptorch">

  <uses-permission android:name="android.permission.CAMERA"/>

  <uses-permission android:name="com.android.vending.BILLING"/>
  <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

  <application
      android:name=".ZapTorch"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Theme.ZapTorch">

    <activity
        android:name=".app.main.MainActivity"
        android:launchMode="singleTask"
        android:theme="@style/Theme.ZapTorch.Splash"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".app.service.error.CameraErrorExplanation"
        android:excludeFromRecents="true"
        android:exported="false"
        android:launchMode="singleInstance"
        android:noHistory="true"
        android:theme="@style/Theme.ZapTorch.Error"
        android:windowSoftInputMode="stateHidden"/>

    <service
        android:name=".app.service.VolumeMonitorService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
      <intent-filter>
        <action android:name="android.accessibilityservice.AccessibilityService"/>
      </intent-filter>
      <meta-data
          android:name="android.accessibilityservice"
          android:resource="@xml/zaptorch"/>
    </service>

    <provider
        android:name=".ZapTorchSingleInitProvider"
        android:authorities="com.pyamsoft.zaptorch.ZapTorchSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

  </application>

</manifest>